{
  "type": "custom.overlay",
  "name": "Overlay group",
  "sections": {
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "color_scheme": "scheme-1",
        "show_cart_note": false,
        "show_shipping_text": true,
        "show_view_cart_button": false,
        "show_checkout_button": true,
        "show_price_in_checkout_button": true,
        "cross_sell_products": [
          "signature-training-shorts-tan",
          "signature-training-pants-black",
          "signature-training-pants-black-1",
          "signature-tank-black",
          "signature-jacket-black"
        ],
        "cross_sell_title": "Best Sellers",
        "cross_sell_stack_products": false
      }
    },
    "newsletter-popup": {
      "type": "newsletter-popup",
      "settings": {
        "color_scheme": "",
        "apparition_delay": 5,
        "show_only_on_index": true,
        "hide_for_account_holders": true,
        "show_only_once": true,
        "title": "Sign up for 15% off your first purchase.",
        "content": "Limited time only, enjoy 15% off on your first purchase.",
        "button_text": "Subscribe To Community"
      }
    },
    "privacy-banner": {
      "type": "privacy-banner",
      "settings": {
        "color_scheme": "scheme-3",
        "title": "Cookie policy",
        "content": "<p>We use cookies and similar technologies to provide the best experience on our website. Refer to our Privacy Policy for more information.</p>"
      }
    }
  },
  "order": ["cart-drawer", "newsletter-popup", "privacy-banner"]
}
